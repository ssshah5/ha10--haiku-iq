<header class='header'>
  <h1 class='theme'>{{theme}}</h1>
</header>
<main class='main'>
  <fieldset>
    <legend>Haiku poem lines</legend>
    
  <ul id='poem'>
    <li id='line1' class='five-syl poemline'>
      <input type="text" class="poemline" placeholder="Line1" name="poemLine1"></input>
    </li>
    <li id='line2' class='seven-syl poemline'>
      <input type="text" class="poemline" placeholder="Line2" name="poemLine2"></input>
    </li>
    <li id='line3' class='five-syl poemline'>
      <input type="text" class="poemline" placeholder="Line3" name="poemLine3"></input>
    </li>
  </ul>
  </fieldset>
</main>
<footer class='footer'>
  <input type='image' src='/images/catalog/catalog_32.svg' name='Dictionary' class='footer-icon' id='dictionary'/>
  <input type='image' src='/images/reset/reset_32.svg' name='Undo' class='footer-icon' id='undo'/>
  <input type='image' src='/images/get-information/get-information_32.svg' name='Info' class='footer-icon' id='info'/>
</footer>
