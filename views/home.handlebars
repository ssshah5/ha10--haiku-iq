<header class='header'>
  <h1 class='theme'>{{theme.theme}}</h1>
</header>
<main class='main'>

  <div class="poem-container">
    <div id="poemLine1" class="poemline"><span id="poemLineWord1">five syllables start</span>
      <div id="syl1" class="syllable">0</div>
    </div>
    <div id="poemLine3" class="poemline"><span id="poemLineWord2">then seven more. On a roll</span>
      <div id="syl2" class="syllable">0</div>
    </div>
    <div id="poemLine3" class="poemline"><span id="poemLineWord3">with five to finish</span>
      <div id="syl3" class="syllable">0</div>
    </div>
  </div>
  <div class="table-style">
    <table id="word-table"></table>
  </div>
</main>
<footer class='footer'>
  <div class='left-footer'>
    <input type='image' src='/images/catalog/catalog_32.svg' name='Dictionary' class='footer-icon' id='dictionary' />
    <input type='image' src='/images/reset/reset_32.svg' name='Undo' class='footer-icon' id='undo' />
  </div>
  <div class='right-footer'>
    <input type='image' src='/images/get-information/get-information_32.svg' name='Info' class='footer-icon' id='info' />
  </div>
</footer>
<div class='info-popup' id='info-popup'>
  <div class='info-content'>
    <input type='image' src='/images/close/close_32.svg' name='CloseInfo' class='close-icon' id='close' /> {{> haikuInfo}}
  </div>
</div>